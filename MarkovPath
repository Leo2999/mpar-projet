digraph MarkovPath {
	rankdir=LR size="8,5"
	node [shape=circle]
	S0 [fillcolor=white style=filled]
	S1 [fillcolor=white style=filled]
	S2 [fillcolor=white style=filled]
	S0 -> S1 [label=5 color=black]
	S0 -> S2 [label=5 color=black]
	S1 -> S0 [label=5 color=black]
	S1 -> S2 [label=5 color=black]
	S2 -> S2 [label=3 color=black]
	S2 -> S1 [label=7 color=black]
}
